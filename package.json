{
  "name": "universis",
  "version": "1.0.0",
  "description": "Simulator of universe.",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm i && cd src/Client && npm i && node_modules/webpack/bin/webpack.js -p --optimize-minimize && cd ../.. && node_modules/typescript/bin/tsc && rm -rf dist/Client && cp -r src/Public dist/Public",
    "run": "node dist/index.js",
    "start": "node dist/index.js",
    "build-and-run": "npm run-script build && npm run-script run",
    "dev-server": "nodemon dist/index.js",
    "dev-client": "cd src/Client && node_modules/webpack-dev-server/bin/webpack-dev-server.js --content-base ./Dist/ --inline --hot --host localhost --port 8080",
    "dev": "npm-run-all --parallel dev-server dev-client",
    "heroku-postbuild": "cd src/Client && npm i && cd ../.. && npm run-script build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/michal-struna/universis.git"
  },
  "keywords": [
    "Universe",
    "simulator",
    "3D"
  ],
  "author": "Michal Struna",
  "license": "UNLICENSED",
  "homepage": "https://bitbucket.org/michal-struna/universis#readme",
  "dependencies": {
    "@tweenjs/tween.js": "^17.2.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "express-openapi": "^1.10.0",
    "http-status-codes": "^1.3.0",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.22.2",
    "mongoose": "^5.1.3",
    "path": "^0.12.7",
    "swagger-ui-express": "^3.0.10",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/express": "^4.11.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.0.15",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3"
  }
}
